{
  "name": "cambio-angola-backend",
  "version": "2.0.0",
  "description": "API backend para o sistema Cambio Angola - taxas de c√¢mbio em tempo real",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seedDatabase.js",
    "backup": "node scripts/backup.js",
    "deploy": "npm run lint && npm run test && npm run start",
    "health": "curl http://localhost:5000/health || echo 'Server not running'",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop cambio-angola",
    "pm2:restart": "pm2 restart cambio-angola",
    "pm2:logs": "pm2 logs cambio-angola",
    "docker:build": "docker build -t cambio-angola .",
    "docker:run": "docker run -p 5000:5000 --env-file .env cambio-angola",
    "build": "echo 'No build step required'"
  },
  "keywords": [
    "cambio",
    "angola",
    "exchange-rates",
    "api",
    "nodejs",
    "mongodb",
    "jwt",
    "alerts"
  ],
  "author": "SidiaS alpha <sidiasalpha2k24@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "exceljs": "^4.4.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!tests/**",
      "!coverage/**"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-unused-vars": [
        "warn",
        {
          "argsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaspardiasdev/cambio-angola-backend.git"
  },
  "bugs": {
    "url": "https://github.com/gaspardiasdev/cambio-angola-backend/issues"
  },
  "homepage": "https://cambio-angola.com"
}
